<body>

    <img src="" alt="" class="waifu">
    <select name="category">
        <option value="awoo">Awoo</option>
        <option value="pat">Pat</option>
        <option value="cringe">Cringe</option>
        <option value="bonk">Bonk</option>
        <option value="hug">Hug</option>
    </select>
    <button class="generator">Waifu!</button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function (){
            $(".generator").click(function() {
                    var catergory = $("[name='category']").val();
                    console.log(catergory);
                    var api = $.getJSON(`https://api.waifu.pics/sfw/${catergory}`);
                    api.done(function (result){
                            $("img").attr("src", result.url);
                    })
                }
            )
        })
    </script>
